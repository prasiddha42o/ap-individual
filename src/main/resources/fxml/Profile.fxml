<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentregistration.controllers.ProfileController">
   <top>
      <VBox styleClass="compact-page-header">
         <children>
            <Label styleClass="compact-page-title" text="Student Profile">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="studentIdLabel" styleClass="compact-student-id" text="Student ID: " />
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <GridPane hgap="15.0" vgap="12.0" styleClass="compact-form-grid" alignment="CENTER">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="nameField" promptText="Enter your full name" styleClass="compact-text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="emailField" promptText="Enter your email" styleClass="compact-text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Program:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <ComboBox fx:id="programComboBox" promptText="Select program" styleClass="compact-combo-box" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  
                  <Label text="Semester:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <ComboBox fx:id="semesterComboBox" promptText="Select semester" styleClass="compact-combo-box" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
               </padding>
            </GridPane>
            
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="saveButton" onAction="#handleSave" styleClass="primary-button" text="Save Changes" />
                  <Button fx:id="backButton" onAction="#handleBack" styleClass="secondary-button" text="Back" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="15.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
