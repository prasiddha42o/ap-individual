<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentregistration.controllers.RegisterController">
   <center>
      <VBox alignment="CENTER" spacing="20.0" styleClass="login-container">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label styleClass="title" text="Student Registration">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Label styleClass="subtitle" text="Create your new student account">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="registrationCountLabel" styleClass="registration-count" text="Loading...">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="studentIdLabel" styleClass="student-id-preview" text="Your Student ID will be: STU0000">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <VBox alignment="CENTER" spacing="15.0" styleClass="form-container">
               <children>
                  <GridPane hgap="15.0" vgap="12.0" alignment="CENTER">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nameField" promptText="Enter your full name" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="emailField" promptText="Enter your email address" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Program:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <ComboBox fx:id="programComboBox" promptText="Select your program" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Semester:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <ComboBox fx:id="semesterComboBox" promptText="Select semester" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <PasswordField fx:id="passwordField" promptText="Enter password (min 6 characters)" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                        <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                     </children>
                  </GridPane>
                  
                  <HBox spacing="15.0" alignment="CENTER">
                     <children>
                        <Button fx:id="registerButton" onAction="#handleRegister" styleClass="primary-button" text="Create Account" />
                        <Button fx:id="backToLoginButton" onAction="#handleBackToLogin" styleClass="secondary-button" text="Back to Login" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
               </padding>
            </VBox>
            
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Separator />
                  <Label styleClass="info-text" text="Registration Requirements:" />
                  <Label styleClass="info-text" text="• All fields are required" />
                  <Label styleClass="info-text" text="• Password minimum 6 characters" />
                  <Label styleClass="info-text" text="• Email must be unique" />
                  <Label styleClass="info-text" text="• Student ID generated automatically" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
