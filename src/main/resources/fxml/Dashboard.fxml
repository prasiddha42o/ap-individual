<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentregistration.controllers.DashboardController">
   <top>
      <VBox styleClass="compact-header">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <VBox spacing="3.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="welcomeLabel" styleClass="compact-welcome" text="Welcome, Student">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                        <Label fx:id="studentInfoLabel" styleClass="compact-info" text="Student Information" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_RIGHT" spacing="3.0">
                     <children>
                        <Label fx:id="currentTimeLabel" styleClass="compact-time" text="Loading..." />
                        <Label fx:id="systemStatsLabel" styleClass="compact-stats" text="System Statistics" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- Compact Stats -->
            <HBox spacing="10.0" styleClass="compact-stats-row" alignment="CENTER">
               <children>
                  <VBox alignment="CENTER" styleClass="compact-stat-card">
                     <children>
                        <Label fx:id="myCoursesLabel" styleClass="compact-stat-value" text="0 Courses" />
                        <Label styleClass="compact-stat-label" text="My Courses" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" styleClass="compact-stat-card">
                     <children>
                        <Label fx:id="totalCreditsLabel" styleClass="compact-stat-value" text="0 Credits" />
                        <Label styleClass="compact-stat-label" text="Total Credits" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="15.0" alignment="CENTER">
         <children>
            <!-- Navigation Grid -->
            <GridPane hgap="15.0" vgap="15.0" alignment="CENTER" styleClass="nav-grid">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="60.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="60.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Button fx:id="profileButton" onAction="#handleProfile" styleClass="compact-nav-button" text="Profile" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Button fx:id="registerCourseButton" onAction="#handleRegisterCourse" styleClass="compact-nav-button" text="Register" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Button fx:id="viewCoursesButton" onAction="#handleViewCourses" styleClass="compact-nav-button" text="My Courses" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                  <Button fx:id="viewGraphsButton" onAction="#handleViewGraphs" styleClass="compact-nav-button" text="Analytics" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="compact-refresh-button" text="Refresh" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="compact-logout-button" text="Logout" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            
            <!-- Quick Info Panel -->
            <VBox spacing="10.0" styleClass="quick-info-panel">
               <children>
                  <Label styleClass="quick-info-title" text="Quick Overview">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <HBox spacing="20.0" alignment="CENTER">
                     <children>
                        <Label styleClass="quick-info-item" text="Profile Complete" />
                        <Label styleClass="quick-info-item" text="Course Registration Open" />
                        <Label styleClass="quick-info-item" text="Analytics Available" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
